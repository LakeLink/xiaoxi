<!--components/userAvatarWithName.wxml-->

<view style="position: relative;">
    <slot catchtap="onTapCommentUser"></slot>
    <view catchtap="IdontKnowHowToDisableIt" wx:if="{{showPopup}}" style="position: absolute; top: 25px; z-index: 10; background-color: #f0f0f0; border-radius: 6px; width: max-content; display: flex; padding: 8px;">
        <image style="width: 50px; height: 50px; padding: 0;" mode="aspectFit" class="avatar" src="{{avatarUrl}}"></image>
        <view style="margin-left: 10px; margin-top: 2px;">
            <text class="user-nickname">{{ nickname }}</text>
            <text class="user-realname">{{ realname }}</text>
        </view>
    </view>
</view>