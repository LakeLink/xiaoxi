<!--pages/feed/index.wxml-->
<view style="padding-bottom: 20px;">
    <view wx:for="{{ weRunDetails }}" style="margin-bottom: 20px;">
        <image src="{{ item.images[0] }}" mode="aspectFill" style="width: 100%; height: 200px;"></image>
        <view>
            <view class="flex-wrp" style="flex-direction:row;">
            </view>
            <view class="container">
                <text class="title">{{item.exerciseType}} </text>
                <text class="author">@{{item._openid}}</text>
                <rich-text class="content">{{item.textContent}} </rich-text>
                <view class="action">
                    <view style="flex-grow: 2; color: red;">
                        <van-icon name="like" />
                        <text style="margin-left: 5px;">{{number_of_likes}}</text>
                    </view>
                    <view style="flex-grow: 2;">
                        <van-icon name="share-o" /> 分享
                    </view>
                    <view style="flex-grow: 4; display: flex; justify-content: flex-end;">
                        <text class="description">{{item.when}} - 西湖大学（云谷校区）</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <text style="display: block;color: grey; text-align: center; white-space: pre;">————    已经到底了    ————</text>
</view>


<navigator class="add" url="/pages/exercise-now/create" style="position: fixed; bottom: 10px; right: 10px;">
    <van-icon size="20px" name="plus" />
</navigator>
