/* pages/feed/moment.wxss */
.card {
    margin: 10px;
    background: white;
    /* border:1px solid gray; */
    border-radius: 8px;
}

.title {
    font-size: 18px;
    font-weight: bold;
}

.content {
    display: block;
    width: 100%;
    margin-top: 10px;
}

.action {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-top: 10px;
}

.description {
    font-size: small;
    color: grey;
}

.add {
    border-radius: 15px;
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 10px;
    background: var(--button-primary-background-color, #07c160);
    color: var(--button-primary-color, #fff);
}
