/* pages/feed/together.wxss */
.card {
    margin-top: 20px;
    margin-left: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    background: white;
    padding: 10px;
    /* border:1px solid gray; */
    border-radius: 8px;
}

.title {
    font-size: large;
    font-weight: bold;
}

.author {
    color: green;
}

.content {
    display: block;
    width: 100%;
    margin-top: 10px;
}

.action {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-top: 10px;
}
.buttons {
    height: 10rpx;
}

.description {
    font-size: large;
    display: block;
}

.add {
    border-radius: 15px;
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 10px;
    background: var(--button-primary-background-color, #07c160);
    color: var(--button-primary-color, #fff);
}

.main-title {
    display: block;
    font-weight: bold;
    font-size: large;
}
.second-title {
    display: block;
    color: grey;
}
.avatar {
    height: 50px;
    width: 50px;
}
