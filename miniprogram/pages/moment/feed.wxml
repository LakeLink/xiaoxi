<!--pages/moment/feed.wxml-->
<view class="safe-area">
    <view class="example-search">
        <t-search model:value="{{searchValue}}" placeholder="搜索预设文案" />
    </view>
    <t-message id="t-message" bind:tap="onTapMessage" />
    <block wx:for="{{posts}}" wx:for-item="listItem" wx:for-index="listIndex">
        <view wx:for="{{listItem}}" wx:for-index="postIndex">
            <brief-post post="{{item}}"></brief-post>
            <!-- <t-swiper list="{{item.swiper}}" image-props="{{imageProps}}" previousMargin="34px" nextMargin="34px" navigation="{{ { type: 'dots-bar' } }}"></t-swiper> -->
            <view wx:if="{{unreadPost == postIndex}}">上次读到这里</view>
        </view>
    </block>
    <view wx:if=""></view>

    <t-fab style="right: 32rpx; bottom: 140rpx;" icon="add" bind:click="onTapCreate" aria-label="增加"></t-fab>
</view>