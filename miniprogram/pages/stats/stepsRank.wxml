<view class="container">
    <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
</view>

<view style="border-radius: 6px; margin: 6px; padding: 12px 6px 0; background-color: white;">
    <view wx:for="{{rankForList}}" style="display: flex; padding-bottom: 12px; justify-content: space-between; align-items: center;">
        <view style="display: inline-block">
            <text style="vertical-align: top; flex-grow: 1; color: yellowgreen; width: 10px; font-weight: bolder; font-size: larger; padding-right: 8px">{{index+1}}</text>
            <image style="width: 50px; height: 50px; padding: 0; border-radius: 4px" mode="aspectFit" class="avatar" src="{{item.avatarUrl}}"></image>

            <view style="margin-left: 10px; display: inline-block;">
                <text class="user-nickname">{{ item.nickname }}</text>
                <text class="{{'college ' + 'college-' + item.collegeIndex}}">{{ collegeList[item.collegeIndex] }}</text>
                <text class="user-realname">{{ item.realname }}</text>
                <view style="margin-top: 4px;">
                    <!-- <text>{{item.info.hobby}}</text> -->
                    <!-- <span style="padding: 6px;">|</span> -->
                    <text class="bio">"{{item.bio}}"</text>
                </view>
            </view>
        </view>

        <text style='{{(index <=2 ? "color: orange;" : "color: darkcyan;") + "margin: 10px 0 10px 10px; font-weight: bold; font-size: large;"}}'>{{item.totalSteps ? item.totalSteps: '未同步' }}</text>
    </view>
</view>