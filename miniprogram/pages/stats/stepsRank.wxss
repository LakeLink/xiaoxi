/* pages/stats/stepsRank.wxss */
ec-canvas {
    width: 100%;
    height: 100%;
}

.chart {
    margin-top: 10px;
    /* position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0; */
    height: 300px;
    margin-left: 6px;
    margin-right: 6px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.container {
    border-radius: 6px;
    margin: 6px;
    padding: 12px 6px 0;
    background-color: white;

    display: flex;
    flex-direction: column;
    /* gap: 8rpx; */
}

.row {
    display: flex;
    padding-bottom: 6px;
    margin-bottom: 6px;
    column-gap: 6px;

    border-bottom: dashed lightgray 1px;
}

.col-rank {
    color: yellowgreen;
    font-weight: bolder;
    font-size: larger;
}

.col-delta {
    font-family: monospace;
    font-size: small;
    position: relative;
    left: -8rpx;
    /* top: -12rpx; */
    margin-right: -8rpx;
}

.col-positivedelta {
    color: orange;
}

.col-negativedelta {
    color: grey;
}

.col-avatar {
    width: 50px;
    height: 50px;
    padding: 0;
    border-radius: 4px;
}

.col-user {
    display: inline-block;
    flex-grow: 1;
}

.col-data {
    display: inline-block;
    text-align: end;
}

.steps {
    font-weight: bold;
    font-size: large;
}

.tickled {
    display: block;
    font-weight: lighter;
    font-size: small;
    color: grey;
}

.user-nickname {
    /* display: block; */
    font-weight: bold;
    font-size: medium;
}

.user-realname {
    /* display: block; */
    margin-left: 8px;
    color: grey;
}

.bio {
    /* color: darkgrey */
    color: #4d4d4d;
    font-size: small;
}

.college {
    /* margin-left: 10px; */
    /* margin-top: 2px; */
    /* margin-right: 4px; */
    margin-left: 1px;
    vertical-align: text-top;
    position: relative;
    top: -4px;
    left: 1px;
    font-size: smaller;
}